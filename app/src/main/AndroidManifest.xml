<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dai.sifaco">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".profiles.AboutPoliticsActivity"></activity>
        <activity android:name=".profiles.PoliticsActivity" />
        <activity android:name=".profiles.ProfileViewActivity" />
        <activity android:name=".profiles.ProfileActivity" />
        <activity
            android:name=".MainEmptyActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".LatestMessagesActivity"
            android:theme="@style/NoPreview" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/NoPreview" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoPreview" />
        <activity android:name=".NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dai.sifaco.LatestMessagesActivity" />
        </activity>
        <activity android:name=".ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dai.sifaco.LatestMessagesActivity" />
        </activity>
        <activity
            android:name=".profiles.VerifyEmptyActivity"
            android:theme="@style/AppTheme.NoDisplay" />
    </application>

</manifest>