<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".profiles.PoliticsActivity">

    <TextView
        android:id="@+id/textview_politicas_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/politicas_de_seguridad"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_politicas_titulo">

        <TextView
            android:id="@+id/textview_politicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/politicas"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_politicas_titulo" />
    </ScrollView>
    <TextView
        android:id="@+id/text_view_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SICOFA version 1.0"
        android:textSize="10sp"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintBottom_toTopOf="@+id/text_view_developed"
        app:layout_constraintEnd_toEndOf="@+id/text_view_developed" />

    <TextView
        android:id="@+id/text_view_developed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollado por TF.CGON. Fernando Jose Ortiz"
        android:textSize="10sp"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintBottom_toTopOf="@+id/text_view_emi"
        app:layout_constraintEnd_toEndOf="@+id/text_view_emi" />

    <TextView
        android:id="@+id/text_view_emi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Escuela militar de Ingenieria, 2020"
        android:textSize="10sp"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_view_bottom_emi"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/emi_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>